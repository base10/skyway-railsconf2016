<% @title = 'Edit news' %>

<%= form_for @announcement do |f| %>
  <%= f.error_messages %>

  <%= f.label :body, "What's new?" %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>

<h3>Some notes about NEWS:</h3>
<pre>
