<% @title = @song.name %>

<p>
  <%= render @song %>
  <% if admin? %>
    <%= link_to "Edit this song.", [:edit, @song] %>
    <%= link_to "Delete this song.", @song, method: :delete, confirm: true %>
  <% end %>
</p>

<% @song.performed_shows.each do |show| %>
  <h2><%= link_to show.when, show %></h2>
  <h3><%= show.venue.name %>, <%= show.venue.location %></h3>
  <hr />
<% end %>
