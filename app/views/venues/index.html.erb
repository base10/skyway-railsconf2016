<article class="type-system-sans">
  <p class="type">All venues (<%= Venue.count %>)</p>

  <% @venues_by_first_letter.each do |first_letter, venues| %>
    <h2><%= first_letter %></h2>
    <% venues.each do |venue| %>
      <p>
        <%= link_to venue.name, venue %>
      </p>
    <% end %>
    <hr />
  <% end %>
</article>
