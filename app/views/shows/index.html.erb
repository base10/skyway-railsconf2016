<% @title = "All shows from #{@year}" %>

<% content_for :top do %>
  <nav>
    <div class="button-group">
      <%= year_buttons_for(@year) %>
    </div>
  </nav>
<% end %>

<p>
  Played <em><%= pluralize Show.for_year(@year).count, "show" %></em> in <%= @year %>.
  <%= link_to "Add a new show.", new_show_path if admin? %>
</p>

<%= render @shows %>
