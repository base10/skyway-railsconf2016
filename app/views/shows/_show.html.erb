<div id="<%= dom_id(show) %>">
  <h2><%= link_to show.when, show %></h2>
  <h3><%= link_to show.venue.name, show.venue %>, <%= show.venue.location %></h3>

  <% show.setlists.each do |setlist| %>
    <p>
      <span><%= setlist.name %></span>:
      <%= format_setlist(show, setlist) %>
    </p>
  <% end %>

  <% if show.notes? %>
    <p>
      <span>Notes:</span>
      <br />
      <% show.notes.each_with_index do |note, index| %>
        <sup><%= bookmark(index) %></sup> <%= note %>
        <br />
      <% end %>
    </p>
  <% end %>

  <hr/>
</div>
